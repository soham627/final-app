<div>
  <div>
    <h1>
      Bookmarked Jobs
    </h1>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>

        <th>
          Role
        </th>

        <th>
          Organization
        </th>

        <th>
          Industry
        </th>

        <th>
          International students?
        </th>

        <th>
          Deadline
        </th>

        <th>
          Posted at
        </th>

        <th>
          Apply
        </th>

      </tr>

      <% @the_jobs_i_like.each do |a_job| %>
      <tr>
        <td>
          <a href="/jobs/<%= a_job.id %>">
          <%= a_job.role %>
          </a>
        </td>

         <td>
          <a href="/organizations/<%= a_job.org.id %>">
          <%= a_job.org.name %>
          </a>
        </td>
         <td>
          <%= a_job.industry.name %>
        </td>

        <td>
          <%if a_job.int_students== true%>
            Yes
          <%else%>
            No
          <%end %>
        </td>

        <td>
          <%= a_job.deadline %>
        </td>

         <td>
          <%= time_ago_in_words(a_job.created_at) %> ago
        </td>

        <td>
          <a href="<%= a_job.link %>" target="_blank">
            Apply
          </a>
          
        </td>



      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
