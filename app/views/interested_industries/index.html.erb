<div>
  <div>
    <h1>
      List of all interested industries
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new interested industry
    </h2>

    <form action="/insert_interested_industry" method="post">
      <div>
        <label for="industry_id_box">
          Industry
        </label>

        <input type="text" id="industry_id_box" name="query_industry_id">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Create interested industry
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Industry
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_interested_industries.each do |an_interested_industry| %>
      <tr>
        <td>
          <%= an_interested_industry.id %>
        </td>

        <td>
          <%= an_interested_industry.industry_id %>
        </td>

        <td>
          <%= an_interested_industry.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(an_interested_industry.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_interested_industry.updated_at) %> ago
        </td>

        <td>
          <a href="/interested_industries/<%= an_interested_industry.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
