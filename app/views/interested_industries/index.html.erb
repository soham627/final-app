<div>
  <div>
    <h1>
      My industries
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new interested industry
    </h2>

    <form action="/insert_interested_industry" method="post">
      <div>
        <label for="industry_id_box">
          Industry
        </label>
        <select id="industry_id_box" name="query_industry_id">
          <% Industry.all.order(:name).each do |a_industry|%>
          <option value="<%=a_industry.name%>">
            <%= a_industry.name%>
          </option>
          <% end%>
        </select>
      </div>

      <button>
        Add interested industry
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>


        <th>
          Industry
        </th>
      </tr>

      <% @list_of_interested_industries.each do |an_interested_industry| %>
      <tr>

        <td>
          <%= an_interested_industry.industry_id %>
        </td>


        <td>
          <a href="/interested_industries/<%= an_interested_industry.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
